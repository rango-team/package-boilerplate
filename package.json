{
    "name": "@rango-team/package-boilerplate",
    "version": "0.0.2",
    "description": "The boilerplate for package creation with jest and stryker",
    "keywords": [],
    "author": "Rango",
    "license": "MIT",
    "type": "commonjs",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rango-team/package-boilerplate"
    },
    "scripts": {
        "prepare": "husky install",
        "build": "rm -rf dist && tsc -p .",
        "format": "prettier src --write .",
        "check-lint": "eslint src --ext ts",
        "check-types": "tsc --pretty --noEmit",
        "check-format": "prettier src --check .",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "devDependencies": {
        "@stryker-mutator/core": "^6.2.2",
        "@stryker-mutator/jest-runner": "^6.2.2",
        "@stryker-mutator/typescript-checker": "^6.2.2",
        "@types/jest": "^29.0.0",
        "@types/node": "^18.7.16",
        "@typescript-eslint/eslint-plugin": "^5.36.2",
        "@typescript-eslint/parser": "^5.36.2",
        "eslint": "^8.23.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "jest": "^29.0.2",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.8",
        "typescript": "^4.8.2"
    }
}
